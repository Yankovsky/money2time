{
  "manifest_version": 2,
  "name": "money to time",
  "short_name": "buxtime",
  "version": "0.2",
  "description": "Google chrome browser extension converting price to working hours",
  "icons": {"128": "rocket-128.png"},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_icon": {
      "128": "rocket-128.png"
    },
    "default_title": "money2time"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  }
}